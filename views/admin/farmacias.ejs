<%- include('./layouts/styles') %>
<body>  
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    <%- include('./layouts/sidebar') %>
    <div class="layout-page"> 
      <div class="content-wrapper">
        <!-- Content -->
        <%- include('./layouts/navbar') %>
        <div class="container-xxl flex-grow-1 container-p-y"> 
        <%- include('./layouts/msg') %> 
          <div class="row">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title pb-2">Todas as Farmácias</h4>
                  <div class="table-responsive">

                <% if(farmacias !=null) { %>                   
                      <table class="table table table-bordered" id="dataTable">
                        <thead>
                          <tr style="background: #e3e3e3;">
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Contacto</th>
                            <th>Província</th>
                            <th style="width: 20%">Acesso</th>
                          </tr>
                        </thead>

                        <tbody id="tableBody" style="font-size: 0.85rem;">
                          
                      <% farmacias.forEach(function(item,i){ %>
                        <tr>
                          <td><%= item.name %></td>
                          <td><%= item.email %></td>
                          <td><%= item.numero %></td>
                          <td><%= item.provincia %></td>
                          <td class="text-center">
                            <div id="<%=item._id%>">
                              <form action="/admin/farmacias/delete/<%= item._id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger text-white btn-sm " onclick="return confirm('Pretende eliminar <%= item.name %> ?')">Deletar</button>
                              </form>
                              <form action="/admin/farmacia/activate/<%= item._id %>" method="POST">
                                <button type="submit" class="btn btn-sm mt-2 <%= item.isActive ? 'btn-warning' : 'btn-primary' %>">
                                  <%= item.isActive ? 'Desativar' : 'Ativar' %>
                                </button>
                              </form>
                            </div>
                          </td>
                        </tr>
                          <%})%>
                        </tbody>
                      </table>
                    <%}%>   
                  </div>
                </div>
              </div>
            </div>
          </div> 
        
        </div> 
        
        <div class="content-backdrop fade"></div>
      </div>
      <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
  </div>
        
  <!-- Overlay -->
  <div class="layout-overlay layout-menu-toggle"></div>
</div> 
<script src="/js/admin/admin.js"></script> 
<%- include('./layouts/script') %>
</body>
</html>  