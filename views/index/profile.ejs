<%- include('./partials/links')%>
<body class="animsition">

<%- include('./partials/header')%> 
<section class="bg-img1 txt-center p-lr-15 p-tb-80" style="background-image: url('/assets/images/slide-01.jpg');">
	<h2 class="pt-2  mt-3 ltext-105 cl0 txt-center">
		<%= farmacia.name %>
	</h2>
</section>	

<section class="bg0 p-t-75 ">
  <div class="container">
    <div class="row mb-4 pb-5">
      <div class="col-md-7 col-lg-8">
        <div class="p-t-7 p-r-85 p-r-15-lg p-r-0-md">
          <h3 class="mtext-111 cl2 p-b-16">
            Sobre a <%= farmacia.name %>
          </h3>

          <p style="font-size: 16px;"><strong>E-mail: </strong><%= farmacia.email %></p>
          <p style="font-size: 16px;"><strong>Localização: </strong><%= farmacia.provincia %>, <%= farmacia.municipio %></p>
          <p style="font-size: 16px;"><strong>Endereço: </strong><%= farmacia.endereco %></p>
          <p style="font-size: 16px;"><strong>Contacto: </strong><%= farmacia.numero %></p>
          <p style="font-size: 16px;" class="mt-2 text-justify"><%= farmacia.descricao %></p>
    
        </div>
      </div>

      <div class="col-11 col-md-5 col-lg-4 m-lr-auto">
        <div class="how-bor1 ">
          <div class="hov-img0">
            <img src="/img/users/<%=farmacia.thumbnail%>" alt="IMG">
          </div>
        </div>
      </div>
      <h3 class="mtext-111 cl2 ">
        Produtos disponíveis nesta farmácia
      </h3>
    </div> 

  </div>
</section>	


<%if(produtos!=null){%>
<section class="bg0 p-b-140 mt-4" id="productContainer">
  <div class="container">
    <%- include('./partials/msg')%>  

    <div class="row isotope-grid"> 
      <%produtos.forEach(product => {%>
      <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item men">
        <!-- Block2 -->
        <div class="block2">
          <div class="block2-pic hov-img0 <%if(product.stock == 0){%>label1" data-label="Esgotado<%}%>">
            <img src="/img/products/<%=product.thumbnail%>" alt="IMG-PRODUCT" class="img-responsive">

            <a href="/products/<%=product._id%>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
              Visualizar
            </a>
          </div>
          <style>                     
          </style>

          <div class="block2-txt flex-w flex-t p-t-14">
            <div class="block2-txt-child1 flex-col-l ">
              <a href="/products/<%=product._id%>" class="stext-105 cl3 hov-cl1 trans-04 js-name-b2">
                <%=product.name%>
              </a>
              <span class="stext-107 cl4">
                Avaliações (<%=product.reviews.length%>)
              </span> 
            </div> 
          </div>
          <div class="block2-txt d-flex flex-t padding-product">
            <div class="block2-txt-child1 flex-col-l ">
              <span class="stext-kz cl3">
                <%=product.price%> AKZ
              </span>

            </div>
            <div class="block2-txt-child2 flex-r" style="width: 100%;"> 
              <span class="dis-block pos-relative">
                <%=product.composicao%>
              </span>
            </div>
          </div>
        </div>
      </div> 
      <%})%>
    </div>
 
  </div>
</section>
<%}%>    






	<!-- Content page -->



<%- include('./partials/footer')%>
<script src="/js/productListing.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html> 