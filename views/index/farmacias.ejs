<%- include('./partials/links')%>
<body class="animsition">

<%- include('./partials/header')%> 
<div class="container pt-3">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
      Home
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>  
    
    <span class="stext-109 cl4">
      Farm√°cias
    </span>
  </div>
</div>

 
<section class="bg0 p-b-140 pt-4 mt-2" id="farmaciasContainer">
  <div class="container">
    <%- include('./partials/msg')%> 
    <div class="flex-w flex-sb-m p-b-52">
 
      <!-- Search farmacias -->
      <div class="dis-none panel-search w-full p-t-10 p-b-15">
          <div class="bor8 p-l-15">
              <form action="/pesquisar" method="get" class="d-flex form-seaching">
                  <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                      <i class="zmdi zmdi-search"></i>
                  </button>
                  <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="q" placeholder="nome, fabricante ou dose">
              </form>
          </div>	
      </div> 
  </div>


    <div class="row isotope-grid"> 
          <%farmacias.forEach(farmacias => {%>
      <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item men">
        <!-- Block2 -->
        <div class="block2">
          <div class="block2-pic hov-img0 <%if(farmacias.stock == 0){%>label1" data-label="Esgotado<%}%>">
            <img src="/img/users/<%=farmacias.thumbnail%>" alt="IMG-farmacias" class="img-responsive">

            <a href="/farmacia/pefil/<%=farmacias._id %>" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
              Visualizar
            </a>
          </div>
          <style>                     
          </style>

          <div class="block2-txt flex-w flex-t p-t-14">
            <div class="block2-txt-child1 flex-col-l ">
              <a href="/farmacia/pefil/<%=farmacias._id %>" class="stext-kz cl3">
                <%=farmacias.name%>
              </a> 
            </div> 
            <div>
              <p class="stext-105 cl3 hov-cl1 trans-04 js-name-b2">
                <%=farmacias.provincia%> - <%=farmacias.municipio%>
              </p>
            </div>
          </div>
          <div class="block2-txt d-flex flex-t padding-farmacias">
            <div class="block2-txt-child1 flex-col-l ">
              <span class="">
                <br>
              </span> 
            </div>
            <div class="block2-txt-child2 flex-r" style="width: 100%;"> 
              <span class="dis-block pos-relative">
                <%=farmacias.composicao%>
              </span>
            </div>
          </div>
        </div>
      </div> 
      <%})%>
    </div>
 
  </div>
</section> 


<%- include('./partials/footer')%>
<script src="/js/farmaciasListing.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html> 