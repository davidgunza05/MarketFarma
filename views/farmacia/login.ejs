<!doctype html>
<html lang="pt">
<head>
  <title>Entrar</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/assets/css/style.login.css">
  <style>
    .flash-message {
      padding: 10px;
      margin: 10px 0;
      border: 1px solid transparent;
      border-radius: 4px;
    }
    .flash-success {
      color: #155724;
      background-color: #d4edda;
      border-color: #c3e6cb;
    }
    .flash-error {
      color: #721c24;
      background-color: #f8d7da;
      border-color: #f5c6cb;
    }
  </style>
</head>
<body>
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
          <div class="wrap">
            <div class="img" style="background-image: url(/assets/images/slide-01.jpg);"></div>
            <div class="login-wrap p-4 p-md-5">
              <div class="d-flex">
                <div class="w-100">
                  <h3 class="mb-2 h3">Entrar como Farmácia</h3>
                </div>
              </div> 
              <% if (error != 0) { %>
                <div class="flash-message flash-error"><%= error %></div>
              <% } %>
					    <%- include('./layouts/msg') %> 
              <form action="/farmacia/login" method="post" class="signin-form">
                <div class="form-group mt-4">
                  <input type="email" class="form-control" name="email" required>
                  <label class="form-control-placeholder" for="email">Email</label>
                </div>
                <div class="form-group mt-4">
                  <input type="password" class="form-control" name="password" required>
                  <label class="form-control-placeholder" for="password">Senha</label>
                  <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
                <div class="form-group">
                  <button type="submit" class="form-control btn btn-primary rounded submit px-3">Entrar</button>
                </div>
                <div class="form-group d-md-flex">
                  <div class="w-50 text-left">
                    <label class="checkbox-primary mb-0"><a href="/farmacia/registrar">Criar conta</a></label>
                  </div>
                </div>
              </form>
              <p class="text-center"><a data-toggle="tab" href="/">Ir a página principal</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script src="/js/signUp.js"></script>
</body>
</html>
