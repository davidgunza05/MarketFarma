<%- include('./layouts/styles') %>
<body>  
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <%- include('./layouts/sidebar') %>
        <div class="layout-page"> 
          <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y"> 
              <%- include('./layouts/msg') %>
              <div class="modal-dialog"> 
                <div class="modal-content" style="background: #fff;">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                      Editar Farmácia
                    </h1> 
                  </div>
                  <div class="modal-body"> 
                    <form class="forms-sample" action="/farmacia/editar/<%= farmacia._id %>" method="POST" enctype="multipart/form-data">
                      <div class="form-group pb-3">
                        <label for="name">Nome da farmácia</label>
                        <input class="form-control" type="text" id="name" name="name" value="<%= farmacia.name %>" required/>
                      </div> 
                      <div class="form-group pb-3">
                        <label for="thumbnail">Imagem Principal</label><br>
                        <input type="file" id="thumbnail" name="thumbnail">
                        <input type="hidden" name="existingThumbnail" value="<%= farmacia.thumbnail %>">
                        <% if (farmacia.thumbnail) { %>
                            <img src="/img/users/<%= farmacia.thumbnail %>" alt="Thumbnail" width="100">
                        <% } %>  
                      </div>       
                      <div class="form-group pb-3">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" value="<%= farmacia.email %>" required/>
                      </div> 
                      <div class="form-group pb-3">
                        <label for="municipio">Município</label>
                        <input class="form-control" type="text" id="municipio" name="municipio" value="<%= farmacia.municipio %>"  required/>
                      </div>
                      <div class="form-group pb-3">
                        <label for="endereco">Endereço</label>
                        <input class="form-control" type="text" id="endereco" name="endereco" value="<%= farmacia.endereco %>" required/>
                      </div>
                      <div class="form-group pb-3">
                        <label for="provincia">Província</label>
                        <input class="form-control" type="text" id="provincia" name="provincia" value="<%= farmacia.provincia %>" required/>
                      </div> 
                      <div class="form-group pb-3">
                        <label for="numero">Número</label>
                        <input class="form-control" type="number" id="numero" name="numero" value="<%= farmacia.numero %>" required/>
                      </div>             
                      <div class="form-group pb-3">
                        <label for="descricao">Descrição</label>
                        <textarea class="form-control text-justify" id="descricao" name="descricao" cols="30" rows="10" required placeholder="Sobre o produto ou contraindicação"><%= farmacia.descricao %></textarea>
                      </div>      
                      <div class="justify-content-center pt-3 text-center">
                        <button type="submit" class="btn btn-dark me-2">Salvar</button>
                        </a>
                      </div>
                    </form>
                  </div>
                </div>
              </div> 
            </div>
          </div>
          <div class="content-backdrop fade"></div>
        </div>
      </div>
    </div>
    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
  </div> 
  <script src="/js/admin/admin.js"></script> 
  <%- include('./layouts/script') %>
  </body>
</html>   
