<html>
<head>
  <style>
    body { font-family: Helvetica, Arial, sans-serif; }
    .header { text-align: center; }
    .content { margin-top: 20px; }
    .table { width: 100%; border-collapse: collapse; }
    .table th, .table td { border: 1px solid #000; padding: 8px; text-align: left; }
    .footer { position: absolute; bottom: 0; width: 100%; text-align: center; }
  </style>
</head>
<body>
  <div class="header">
    <img src="<%= farmacia.thumbnail %>" alt="Logo" width="100">
    <h1><%= farmacia.name %></h1>
    <p><%= farmacia.endereco %>, <%= farmacia.municipio %>, <%= farmacia.provincia %></p>
  </div>
  <div class="content">
    <h2>Relatórios de venda - <%= documentTitle %></h2>
    <table class="table">
      <thead>
        <tr>
          <th>Mês</th>
          <th>Total de Produtos</th>
          <th>Total de Pedidos</th>
          <th>Receita</th>
          <th>Valor Médio por Pedido</th>
        </tr>
      </thead>
      <tbody>
        <% orderData.forEach(order => { %>
          <tr>
            <td><%= order._id.month %></td>
            <td><%= order.totalProducts %></td>
            <td><%= order.totalOrders %></td>
            <td><%= order.revenue %></td>
            <td><%= order.avgBillPerOrder %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <div class="footer">
    <p>Generated on <%= new Date().toLocaleDateString() %></p>
  </div>
</body>
</html>
